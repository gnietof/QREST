<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <property name="severity" value="error"/>
  <property name="charset" value="UTF-8"/>
  <property name="fileExtensions" value="java"/>

  <!-- ================================================= -->
  <!--   Import a less strict base style (Google)       -->
  <!-- ================================================= -->
  <module name="TreeWalker">
    <!-- Use Google style as starting point -->
    <module name="JavadocMethod">
      <property name="accessModifiers" value="public"/>
      <!-- Only require Javadoc on public methods (very relaxed) -->
      <property name="allowMissingPropertyJavadoc" value="true"/>
    </module>

    <!-- Completely disable JavadocVariable (field Javadoc) -->
    <module name="JavadocVariable">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Allow missing Javadoc on private/protected/package methods -->
    <module name="MissingJavadocMethod">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Allow missing Javadoc on constructors -->
    <module name="MissingJavadocMethod">
      <property name="ignoreConstructors" value="true"/>
    </module>

    <!-- Line length â€“ more generous than default -->
    <module name="LineLength">
      <property name="max" value="120"/>
      <property name="ignorePattern" value="^package.*|^import.*|//.*"/>
    </module>

    <!-- Optional: suppress some very noisy rules you might hate -->
    <module name="FinalParameters">
      <property name="severity" value="ignore"/>  <!-- no forced final params -->
    </module>

    <module name="HiddenField">
      <property name="severity" value="ignore"/>  <!-- allow parameter names same as fields -->
    </module>

    <!-- You can add more suppressions later using a suppressions file -->
    <!-- <module name="SuppressionFilter"> ... -->

  </module>

  <!-- File-level checks -->
  <module name="FileTabCharacter"/>
  <module name="NewlineAtEndOfFile">
    <property name="lineSeparator" value="lf"/>
  </module>

</module>
